{
  "name": "blender-launcher",
  "version": "0.0.0",
  "description": "Blender Launcher est une application multiplateforme permettant de g√©rer facilement plusieurs versions de Blender",
  "main": "dist/main/main.js",
  "author": "",
  "license": "ISC",
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "extract-file-icon": "^0.3.2",
    "html-webpack-plugin": "^5.6.4",
    "marked": "^12.0.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "swiper": "^9.4.1",
    "wait-on": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@types/electron": "^1.6.12",
    "@types/node": "^24.7.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@types/react-i18next": "^8.1.0",
    "archiver": "^5.3.1",
    "babel-loader": "^10.0.0",
    "concurrently": "^8.2.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "electron": "^38.1.0",
    "electron-packager": "^17.1.0",
    "i18next": "^25.5.3",
    "nodemon": "^3.0.2",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "webpack-cli": "^6.0.1"
  },
  "scripts": {
    "clean": "node scripts/clean.js || rimraf dist release",
    "start": "npx electron .",
    "dev": "npx tsc && npx cross-env BROWSER=none webpack --mode development && npx electron .",
    "build:renderer": "webpack --mode production",
    "build:main": "tsc -p tsconfig.json && node scripts/copy_dist_assets.js",
    "build": "npm run build:renderer && npm run build:main && echo Renderer+Main built",
    "package:win:zip": "npm run build && electron-builder --win --x64 --publish never",
    "package:win:portable": "node scripts/package_portable_packager.js",
    "package:packager": "npm run build && node scripts/package_with_packager.js",
    "clean:all": "node scripts/clean.js || rimraf dist release"
  },
  "build": {
    "productName": "Blender Launcher",
    "appId": "com.suussonic.blender-launcher",
    "files": [
      "dist/**",
      "backend/**",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "dist/preload.js",
      "dist/tray/**",
      "dist/public/**"
    ],
    "win": {
      "target": [
        "zip",
        "portable"
      ],
      "win32metadata": {
        "CompanyName": "Suussonic",
        "FileDescription": "Blender Launcher",
        "ProductName": "Blender Launcher"
      },
      "artifactName": "${productName}-${version}-win.zip"
    }
  }
}
